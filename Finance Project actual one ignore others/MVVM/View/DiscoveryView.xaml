
    <UserControl x:Class="BudgetApp.Views.AddExpenseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
        <StackPanel Margin="20">
            <TextBlock Text="Add New Expense" FontSize="20" Margin="0,0,0,10"/>

            <TextBlock Text="Expense Name"/>
            <TextBox Text="{Binding ExpenseName}" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Amount"/>
            <TextBox Text="{Binding ExpenseAmount}" Width="200" Margin="0,0,0,10"/>

            <Button Content="Add" Command="{Binding SubmitExpenseCommand}" Width="100" Margin="0,20,0,0"/>
        </StackPanel>
    </UserControl>
    